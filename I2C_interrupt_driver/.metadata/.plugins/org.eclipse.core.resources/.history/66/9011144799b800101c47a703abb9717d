/**
 ******************************************************************************
 * @file           : main.c
 * @author         : Himshree
 * @brief          : Main program body for I2C Interrupt driver test
 ******************************************************************************
 */

#include <stdint.h>
#include "I2C_Driver.h"
#include "STM32_L0538xx.h"
#include "gpio_driver.h"
#include <stddef.h>

I2C_Handle_t hi2c1;
GPIO_Config_t i2c_gpio;

volatile uint8_t tx_done = 0;
uint8_t data[] = "HELLO";
uint8_t slaveAddr = 0x08;

/* ----------------- Callback Overrides ----------------- */
void I2C_IT_TxCpltCallback(I2C_Handle_t *hi2c)
{
    tx_done = 1;
}

void I2C_IT_StopCallback(I2C_Handle_t *hi2c)
{
    hi2c->Instance->ICR |= I2C_ICR_STOPCF;
}

void I2C_IT_ErrorCallback(I2C_Handle_t *hi2c)
{
    hi2c->Instance->ICR |= I2C_ICR_NACKCF;
}

/* ----------------- Main ----------------- */
int main(void)
{
    /* ----------------- GPIO CONFIG ----------------- */
    RCC->IOPENR |= (1 << 1);   // Enable GPIOB clock

    i2c_gpio.Mode = GPIO_MODE_ALTFN;
    i2c_gpio.AltFunc = 1;      // AF1 for I2C1
    i2c_gpio.Pull = GPIO_NOPULL;
    i2c_gpio.Speed = GPIO_SPEED_HIGH;

    i2c_gpio.PinNumber = GPIO_PIN_6;   // SCL
    GPIO_Init(GPIOB, &i2c_gpio);

    i2c_gpio.PinNumber = GPIO_PIN_7;   // SDA
    GPIO_Init(GPIOB, &i2c_gpio);

    /* ----------------- I2C CONFIG ----------------- */
    hi2c1.Instance = I2C1;
    hi2c1.Init.ClockSpeed = 100000;
    hi2c1.Init.AddressMode = I2C_7BIT_ADDR;
    hi2c1.Init.OwnAddress = 0x52;
    I2C_Init(&hi2c1);
    I2C_IT_Init(&hi2c1);

    /* Enable I2C interrupt in NVIC */
    NVIC_EnableIRQ(I2C1_IRQn);

    /* ----------------- MAIN LOOP ----------------- */
    while (1)
    {
        tx_done = 0;

        /* Start transmission */
        I2C_Start(&hi2c1, slaveAddr, I2C_WRITE);

        /* Load first byte manually to trigger TXIE */
        hi2c1.Instance->TXDR = data[0];
        hi2c1.Instance->CR1 |= I2C_CR1_TXIE;

        /* Wait until transfer completes */
        while (!tx_done);

        I2C_Stop(&hi2c1);

        for (volatile int i = 0; i < 100000; i++);
    }
}

/* ----------------- IRQ Handler ----------------- */
void I2C1_IRQHandler(void)
{
    I2C_IRQHandler(&hi2c1);
}
