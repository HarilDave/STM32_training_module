#include "gpio_driver.h"

void GPIO_Init(RCC_RegDef_t *port, GPIO_Config_t *config)
{
    if (port == GPIOA) RCC->IOPENR |= (1 << 0);
    else if (port == GPIOB) RCC->IOPENR |= (1 << 1);
    else if (port == GPIOC) RCC->IOPENR |= (1 << 2);
    else if (port == GPIOD) RCC->IOPENR |= (1 << 3);
    else if (port == GPIOH) RCC->IOPENR |= (1 << 7);

    uint8_t pin = config->PinNumber;

    port->MODER &= ~(3 << (2 * pin));
    port->MODER |=  (config->Mode << (2 * pin));

    port->OTYPER &= ~(1 << pin);
    port->OTYPER |=  (config->OType << pin);

    port->OSPEEDR &= ~(3 << (2 * pin));
    port->OSPEEDR |=  (config->Speed << (2 * pin));

    // 4. Configure pull-up/pull-down
    port->PUPDR &= ~(3 << (2 * pin));
    port->PUPDR |=  (config->Pull << (2 * pin));

    if (config->Mode == GPIO_MODE_ALTFN)
    {
        if (pin < 8)
        {
            port->AFR[0] &= ~(0xF << (4 * pin));
            port->AFR[0] |=  (config->AltFunc << (4 * pin));
        }
        else
        {
            port->AFR[1] &= ~(0xF << (4 * (pin - 8)));
            port->AFR[1] |=  (config->AltFunc << (4 * (pin - 8)));
        }
    }
}

void GPIO_DeInit(GPIO_TypeDef *port)
{
    if (port == GPIOA)
    {
        RCC->IOPRSTR |= (1 << 0);
        RCC->IOPRSTR &= ~(1 << 0);
    }
    else if (port == GPIOB)
    {
        RCC->IOPRSTR |= (1 << 1);
        RCC->IOPRSTR &= ~(1 << 1);
    }
    else if (port == GPIOC)
    {
        RCC->IOPRSTR |= (1 << 2);
        RCC->IOPRSTR &= ~(1 << 2);
    }
    else if (port == GPIOD)
    {
        RCC->IOPRSTR |= (1 << 3);
        RCC->IOPRSTR &= ~(1 << 3);
    }
    else if (port == GPIOH)
    {
        RCC->IOPRSTR |= (1 << 7);
        RCC->IOPRSTR &= ~(1 << 7);
    }
}

void GPIO_WritePin(GPIO_TypeDef *port, uint8_t pin, uint8_t state)
{
    if (state)
        port->ODR |= (1 << pin);
    else
        port->ODR &= ~(1 << pin);
}

uint8_t GPIO_ReadPin(GPIO_TypeDef *port, uint8_t pin)
{
    return ((port->IDR >> pin) & 0x1);
}

void GPIO_TogglePin(GPIO_TypeDef *port, uint8_t pin)
{
    port->ODR ^= (1 << pin);
}
