#ifndef INC_TMP007_H_
#define INC_TMP007_H_

#include "stm32f4xx_hal.h"

// TMP007 I2C address (7-bit)
#define TMP007_ADDR      0x40

// TMP007 Registers
#define TMP007_TOBJ      0x00
#define TMP007_TA        0x01

// Initialize TMP007 (optional, some settings can be added)
void TMP007_Init(I2C_HandleTypeDef *hi2c);

// Read raw 16-bit register
uint16_t TMP007_ReadRaw(uint8_t reg);

// Read temperature in Celsius
float TMP007_ReadAmbientTemp(I2C_HandleTypeDef *hi2c);
float TMP007_ReadObjectTemp(I2C_HandleTypeDef *hi2c);

#endif /* INC_TMP007_H_ */
