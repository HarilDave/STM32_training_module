#include <stdint.h>
#include "spi_driver.h"
#include "gpio_driver.h"

uint8_t txBuf[5] = {0x11, 0x22, 0x33, 0x44, 0x55};
uint8_t rxBuf[5];

int main(void)
{
    SPI1_DMA_Init(txBuf, rxBuf, 5);

    while (1)
    {
        SPI1_DMA_Start();
        for (volatile int i = 0; i < 100000; i++);
        SPI1_DMA_Stop();
    }
}
