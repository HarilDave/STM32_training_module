void lcd_send_nibble(uint8_t nibble);
void lcd_send_byte(uint8_t data, uint8_t rs);
void lcd_command(uint8_t cmd);
void lcd_data(uint8_t data);
void lcd_init(void);
void lcd_send_string(char *str);
void lcd_pulse_enable(void);

void SystemClock_Config(void);
static void MX_GPIO_Init(void);

void lcd_pulse_enable(void)
{
  HAL_GPIO_WritePin(EN_Port, EN_Pin, GPIO_PIN_SET);
  HAL_Delay(1);
  HAL_GPIO_WritePin(EN_Port, EN_Pin, GPIO_PIN_RESET);
  HAL_Delay(1);
}

void lcd_send_nibble(uint8_t nibble)
{
  HAL_GPIO_WritePin(D_Port, D4_Pin, (nibble >> 0) & 0x01);
  HAL_GPIO_WritePin(D_Port, D5_Pin, (nibble >> 1) & 0x01);
  HAL_GPIO_WritePin(D_Port, D6_Pin, (nibble >> 2) & 0x01);
  HAL_GPIO_WritePin(D_Port, D7_Pin, (nibble >> 3) & 0x01);
  lcd_pulse_enable();
}

void lcd_send_byte(uint8_t data, uint8_t rs)
{
  HAL_GPIO_WritePin(RS_Port, RS_Pin, rs ? GPIO_PIN_SET : GPIO_PIN_RESET);
  lcd_send_nibble(data >> 4);
  lcd_send_nibble(data & 0x0F);
  HAL_Delay(2);
}

void lcd_command(uint8_t cmd)
{
  lcd_send_byte(cmd, 0);
}

void lcd_data(uint8_t data)
{
  lcd_send_byte(data, 1);
}

void lcd_send_string(char *str)
{
  while (*str) lcd_data(*str++);
}

void lcd_init(void)
{
  HAL_Delay(50);
  lcd_send_nibble(0x03); HAL_Delay(5);
  lcd_send_nibble(0x03); HAL_Delay(5);
  lcd_send_nibble(0x03); HAL_Delay(5);
  lcd_send_nibble(0x02); HAL_Delay(5);

  lcd_command(0x28); // 4-bit, 2-line, 5x8 font
  lcd_command(0x0C); // Display ON, Cursor OFF
  lcd_command(0x06); // Auto-increment cursor
  lcd_command(0x01); // Clear display
  HAL_Delay(2);
}
