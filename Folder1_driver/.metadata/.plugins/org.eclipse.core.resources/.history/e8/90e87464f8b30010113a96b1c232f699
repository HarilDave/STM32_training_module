/* USER CODE BEGIN 0 */

I2C_HandleTypeDef hi2c;

void I2C_Init(I2C_TypeDef *I2Cx, GPIO_TypeDef *GPIOx, uint16_t scl_pin, uint16_t sda_pin, uint32_t timing)
{
    GPIO_InitTypeDef GPIO_InitStruct = {0};

    if (I2Cx == I2C1) __HAL_RCC_I2C1_CLK_ENABLE();
    if (I2Cx == I2C2) __HAL_RCC_I2C2_CLK_ENABLE();
    if (I2Cx == I2C3) __HAL_RCC_I2C3_CLK_ENABLE();

    if (GPIOx == GPIOA) __HAL_RCC_GPIOA_CLK_ENABLE();
    if (GPIOx == GPIOB) __HAL_RCC_GPIOB_CLK_ENABLE();
    if (GPIOx == GPIOC) __HAL_RCC_GPIOC_CLK_ENABLE();

    GPIO_InitStruct.Pin = scl_pin | sda_pin;
    GPIO_InitStruct.Mode = GPIO_MODE_AF_OD;
    GPIO_InitStruct.Pull = GPIO_PULLUP;
    GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_VERY_HIGH;
    if (I2Cx == I2C1) GPIO_InitStruct.Alternate = GPIO_AF4_I2C1;
    if (I2Cx == I2C2) GPIO_InitStruct.Alternate = GPIO_AF4_I2C2;
    if (I2Cx == I2C3) GPIO_InitStruct.Alternate = GPIO_AF4_I2C3;
    HAL_GPIO_Init(GPIOx, &GPIO_InitStruct);

    hi2c.Instance = I2Cx;
    hi2c.Init.Timing = timing;
    hi2c.Init.OwnAddress1 = 0;
    hi2c.Init.AddressingMode = I2C_ADDRESSINGMODE_7BIT;
    hi2c.Init.DualAddressMode = I2C_DUALADDRESS_DISABLE;
    hi2c.Init.OwnAddress2 = 0;
    hi2c.Init.OwnAddress2Masks = I2C_OA2_NOMASK;
    hi2c.Init.GeneralCallMode = I2C_GENERALCALL_DISABLE;
    hi2c.Init.NoStretchMode = I2C_NOSTRETCH_DISABLE;
    HAL_I2C_Init(&hi2c);
    HAL_I2CEx_ConfigAnalogFilter(&hi2c, I2C_ANALOGFILTER_ENABLE);
    HAL_I2CEx_ConfigDigitalFilter(&hi2c, 0);
}

HAL_StatusTypeDef I2C_Write(uint16_t devAddr, uint8_t *data, uint16_t size)
{
    return HAL_I2C_Master_Transmit(&hi2c, devAddr << 1, data, size, HAL_MAX_DELAY);
}

HAL_StatusTypeDef I2C_Read(uint16_t devAddr, uint8_t *data, uint16_t size)
{
    return HAL_I2C_Master_Receive(&hi2c, devAddr << 1, data, size, HAL_MAX_DELAY);
}

